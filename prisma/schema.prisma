generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model IdentityUser {
  id           String           @id @db.Uuid // This is a UUID
  firstName    String
  lastName     String
  email        String           @unique
  role         IdentityUserRole @default(USER)
  passwordHash String
  status       IdentityStatus
  createdAt    DateTime
  updatedAt    DateTime

  refreshTokens  RefreshToken[]
  resetTokens    ResetToken[]
  userPreference UserPreference?
}

enum IdentityUserRole {
  ADMIN
  USER
}

model RefreshToken {
  id String @id @db.Uuid

  identityUserId String   @db.Uuid
  value          String   @unique
  expiresAt      DateTime
  isRevoked      Boolean  @default(false)
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

model ResetToken {
  id             String   @id @db.Uuid
  identityUserId String   @db.Uuid
  value          String   @unique
  expiresAt      DateTime
  isExpired      Boolean
  isValid        Boolean
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

enum IdentityStatus {
  ACTIVE
  SUSPENDED
}

model JobSource {
  id       String   @id @db.Uuid
  name     String // "Remotive Jobs" (For the UI)
  provider String // "REMOTIVE" (For the Factory)
  type     FeedType // RSS, API, SCRAPER

  baseUrl        String // The endpoint or site root
  isEnabled      Boolean   @default(true)
  lastIngestedAt DateTime?

  // JobSources own their listings
  listings JobListing[]
}

model UserPreference {
  id              String   @id @db.Uuid
  userId          String   @unique @db.Uuid // Unique ensures 1-to-1
  categories      String[] // Postgres supports string arrays natively
  locations       String[]
  minimumSalary   Int      @default(0)
  isAlertsEnabled Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // The link back to Identity
  user IdentityUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum FeedType {
  RSS
  ATOM
  CUSTOM_XML
}

model JobListing {
  id            String   @id @db.Uuid
  jobSourceId   String   @db.Uuid
  externalJobId String // The ID from the source (e.g., Remotive ID)
  title         String
  category      String? // New: "Software Development", "DevOps", etc.
  salary        String?
  type          String? // Changed to String? because Remotive says it's optional
  company       String
  location      String // "Worldwide", "Remote", "USA"
  jobUrl        String   @unique // Added unique here as well for safety
  postedAt      DateTime
  ingestedAt    DateTime @default(now())

  jobSource JobSource @relation(fields: [jobSourceId], references: [id])

  @@unique([jobSourceId, externalJobId])
  @@index([category]) // Indexing for fast filtering by category
  @@index([location]) // Indexing for fast filtering by location
}

enum Job_Listing_Type {
  REMOTE
  ONSITE
  HYBRID
}

model RecommendationResult {
  id         String @id @db.Uuid
  userId     String @db.Uuid
  jobId      String @db.Uuid
  totalScore Float // Normalized 0.0 to 1.0

  // Score Breakdown (The "Why")
  roleScore      Float
  locationScore  Float
  seniorityScore Float
  keywordScore   Float

  explanationText String   @db.Text
  computedAt      DateTime @default(now())

  // Ensure we don't have duplicate recommendations for the same user/job pair
  @@unique([userId, jobId])
  @@index([userId])
  @@index([totalScore])
}

// Job Tracking Context

model JobApplication {
  id            String    @id @db.Uuid
  userId        String    @db.Uuid
  jobId         String    @db.Uuid
  status        String // SAVED, APPLIED, etc.
  appliedAt     DateTime?
  lastUpdatedAt DateTime  @default(now())

  // Relations
  notes ApplicationNote[]

  @@unique([userId, jobId]) // INVARIANT: One application per job per user
  @@index([userId])
  @@index([status])
}

model ApplicationNote {
  id            String   @id @db.Uuid
  applicationId String   @db.Uuid
  content       String   @db.Text
  createdAt     DateTime @default(now())

  // Relation back to parent
  application JobApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
}

// Purpose: Audit trail and retrieval of non-authoritative suggestions

model AIResumeSuggestion {
  id              String   @id @db.Uuid
  userId          String   @db.Uuid
  resumeId        String   @db.Uuid
  jobId           String?  @db.Uuid // Optional: only for tailoring/gap analysis
  suggestionType  String   // REWRITE, TAILORING, GAP_ANALYSIS
  originalContent Json     // The "ResumeSnapshot" at request time
  suggestedContent Json     // The AI output
  createdAt       DateTime @default(now())

  @@index([userId])
}

// Notification Context
model NotificationHistory {
  id              String   @id @db.Uuid
  userId          String   @db.Uuid
  type            String   // RECOMMENDATION_READY, APPLICATION_REMINDER, etc.
  channel         String   // EMAIL
  recipient       String   // The email address used at the time
  subject         String
  content         String   @db.Text
  status          String   // SENT, FAILED, QUEUED
  errorMessage    String?
  sentAt          DateTime @default(now())

  @@index([userId])
}

// --- ANALYTICS CONTEXT TABLES ---

model ApplicationMetric {
  id            String   @id @db.Uuid
  userId        String   @db.Uuid
  jobId         String   @db.Uuid
  status        String   // APPLIED, INTERVIEW, OFFER, REJECTED
  responseTime  Int?     // Days between "Applied" and "Interview/Response"
  appliedAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model AIUsageMetric {
  id             String   @id @db.Uuid
  userId         String   @db.Uuid
  featureName    String   // TAILOR, IMPROVE, GAP_ANALYSIS
  tokensUsed     Int?     // Optional: for cost tracking
  createdAt      DateTime @default(now())

  @@index([userId])
}

model UserActivityMetric {
  id        String   @id @db.Uuid
  userId    String   @db.Uuid
  action    String   // JOB_VIEW, JOB_SAVE, LOGIN
  createdAt DateTime @default(now())

  @@index([userId, action])
}
