generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model IdentityUser {
  id           String           @id @db.Uuid // This is a UUID
  firstName    String
  lastName     String
  email        String           @unique
  role         IdentityUserRole @default(USER)
  passwordHash String
  status       IdentityStatus
  createdAt    DateTime
  updatedAt    DateTime

  refreshTokens RefreshToken[]
  resetTokens   ResetToken[]
  userPreference UserPreference?
}

enum IdentityUserRole {
  ADMIN
  USER
}

model RefreshToken {
  id String @id @db.Uuid

  identityUserId String   @db.Uuid
  value          String   @unique
  expiresAt      DateTime
  isRevoked      Boolean  @default(false)
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

model ResetToken {
  id             String   @id @db.Uuid
  identityUserId String   @db.Uuid
  value          String   @unique
  expiresAt      DateTime
  isExpired      Boolean
  isValid        Boolean
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

enum IdentityStatus {
  ACTIVE
  SUSPENDED
}

model JobSource {
  id       String   @id @db.Uuid
  name     String // "Remotive Jobs" (For the UI)
  provider String // "REMOTIVE" (For the Factory)
  type     FeedType // RSS, API, SCRAPER

  baseUrl        String // The endpoint or site root
  isEnabled      Boolean   @default(true)
  lastIngestedAt DateTime?

  // JobSources own their listings
  listings JobListing[]
}

model UserPreference {
  id              String   @id @db.Uuid
  userId          String   @unique @db.Uuid // Unique ensures 1-to-1
  categories      String[] // Postgres supports string arrays natively
  locations       String[]
  minimumSalary   Int      @default(0)
  isAlertsEnabled Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // The link back to Identity
  user IdentityUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum FeedType {
  RSS
  ATOM
  CUSTOM_XML
}

model JobListing {
  id            String   @id @db.Uuid
  jobSourceId   String   @db.Uuid
  externalJobId String // The ID from the source (e.g., Remotive ID)
  title         String
  category      String? // New: "Software Development", "DevOps", etc.
  salary        String?
  type          String? // Changed to String? because Remotive says it's optional
  company       String
  location      String // "Worldwide", "Remote", "USA"
  jobUrl        String   @unique // Added unique here as well for safety
  postedAt      DateTime
  ingestedAt    DateTime @default(now())

  jobSource JobSource @relation(fields: [jobSourceId], references: [id])

  @@unique([jobSourceId, externalJobId])
  @@index([category]) // Indexing for fast filtering by category
  @@index([location]) // Indexing for fast filtering by location
}

enum Job_Listing_Type {
  REMOTE
  ONSITE
  HYBRID
}

model AlertUser {
  id             String   @id @db.Uuid
  identityUserId String   @db.Uuid
  email          String
  isPaused       Boolean  @default(false)
  createdAt      DateTime
}

model AlertRule {
  id          String   @id @db.Uuid
  alertUserId String
  keyword     String?
  createdAt   DateTime
}
