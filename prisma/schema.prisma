generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model IdentityUser {
  id           String         @id @db.Uuid // This is a UUID
  firstName    String
  lastName     String
  email        String         @unique
  passwordHash String
  status       IdentityStatus
  createdAt    DateTime
  updatedAt    DateTime

  refreshTokens RefreshToken[]
  resetTokens   ResetToken[]
}

model RefreshToken {
  id             String   @id @db.Uuid
  // FIX: Added @db.Uuid to match IdentityUser.id
  identityUserId String   @db.Uuid
  value          String   @unique
  expiresAt      DateTime
  isRevoked      Boolean  @default(false)
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

model ResetToken {
  id             String   @id @db.Uuid
  // FIX: Added @db.Uuid to match IdentityUser.id
  identityUserId String   @db.Uuid
  value          String
  expiresAt      DateTime
  isExpired      Boolean
  isValid        Boolean
  createdAt      DateTime
  updatedAt      DateTime

  user IdentityUser @relation(fields: [identityUserId], references: [id])
}

enum IdentityStatus {
  ACTIVE
  SUSPENDED
}

model FeedSource {
  id            String    @id @db.Uuid
  name          String
  type          FeedType
  endpointUrl   String
  isActive      Boolean   @default(true)
  lastFetchedAt DateTime?
  createdAt     DateTime
}

enum FeedType {
  RSS
  ATOM
  CUSTOM_XML
}

model ContentItem {
  id           String      @id @db.Uuid
  feedSourceId String
  externalId   String
  title        String
  body         String?
  publishedAt  DateTime
  contentType  ContentType
  createdAt    DateTime

  @@unique([feedSourceId, externalId])
}

enum ContentType {
  NEWS
  JOB
  BLOG
}

model AlertUser {
  id             String   @id @db.Uuid
  // FIX: This likely also needs to match your IdentityUser if they are linked
  identityUserId String   @db.Uuid
  email          String
  isPaused       Boolean  @default(false)
  createdAt      DateTime
}

model AlertRule {
  id          String      @id @db.Uuid
  alertUserId String
  contentType ContentType
  keyword     String?
  createdAt   DateTime
}
